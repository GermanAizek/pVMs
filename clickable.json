{
    "builder": "custom",
    "default": "build",
    "kill": "pvms",
    "dependencies_host": [
        "autoconf-archive",
        "bison",
        "ccache",
        "flex",
        "gettext",
        "libtool",
        "meson",
        "ninja-build",
        "ovmf",
        "xutils-dev"
    ],
    "dependencies_target": [
        "libgbm-dev",
        "libdrm-dev",
        "libdbus-1-dev",
        "libasound2-dev",
        "libxcursor-dev",
        "libxinerama-dev",
        "libxi-dev",
        "libxrandr-dev",
        "libxss-dev",
        "libjpeg-dev",
        "libcap-ng-dev",
        "libseccomp-dev",
        "libcairo2-dev",
        "libepoxy-dev",
        "libmount-dev",
        "libwayland-dev",
        "libxi-dev",
        "libtool",
        "mesa-common-dev",
        "libaio-dev",
        "libseccomp-dev",
        "libpulse-dev",
        "libpixman-1-dev",
        "libgles2-mesa-dev",
        "libegl1-mesa-dev",
        "libmirclient-dev",
        "libvncserver-dev",
        "libva-dev",
        "libslirp-dev",
        "zlib1g-dev"
    ],
    "install_lib": [
        "/usr/lib/${ARCH_TRIPLET}/libaio.so*",
        "/usr/lib/${ARCH_TRIPLET}/libvncclient.so*",
        "/usr/lib/${ARCH_TRIPLET}/libslirp.so*",
        "/usr/lib/${ARCH_TRIPLET}/libva.so*"
    ],
    "build": "${ROOT}/build.sh",
    "make_jobs": 6,
    "qt_version": "5.12",
    "framework": "ubuntu-sdk-20.04"
}
